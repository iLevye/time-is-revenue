{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Projects <a class="btn btn-success" href="{{ path('project_new') }}">Create new</a></h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ project.name }}</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('project_show', {'id': project.id}) }}">show</a>
                        <a class="btn btn-primary"" href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
