{% extends 'base.html.twig' %}


{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button class="btn">{{ button_label|default('Save') }}</button>
                {{ form_end(form) }}


                <table class="table table-bordered" style="margin-top:30px;">
                    <thead>
                    <tr>
                        <th>Date</th>
                        <th>Client</th>
                        <th>Project</th>
                        <th>Task</th>
                        <th>Hours</th>
                        <th>Rate</th>
                        <th>Is Billable?</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set totalHours = 0 %}
                    {% for row in data %}
                        {% set totalHours = totalHours + row.hours %}
                        <tr>
                            <td>{{ row.date | date('Y-m-d') }}</td>
                            <td>{{ row.client_name }}</td>
                            <td>{{ row.project_name }}</td>
                            <td>{{ row.description }}
                                {% if row.asanaUrl %}
                                    <a href="{{ row.asanaUrl }}" target="_blank">asana</a>
                                {% endif %}
                            </td>
                            <td>{{ row.hours }}</td>
                            <td>{{ row.billableRate }}</td>
                            <td>{{ row.isBillable ? 'Yes': 'No' }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="4"></td>
                        <td>{{ totalHours }}</td>
                        <td colspan="2"></td>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}