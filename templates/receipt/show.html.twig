{% extends 'base.html.twig' %}

{% block title %}Receipt{% endblock %}

{% block body %}
    <h1>Receipt</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ receipt.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ receipt.createdAt ? receipt.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ receipt.startDate ? receipt.startDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ receipt.endDate ? receipt.endDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TotalHours</th>
                <td>{{ receipt.totalHours }}</td>
            </tr>
            <tr>
                <th>TotalPrice</th>
                <td>{{ receipt.totalPrice }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('download_receipt', { 'id': receipt.id }) }}">Download pdf</a>

    {{ include('receipt/_delete_form.html.twig') }}
{% endblock %}
