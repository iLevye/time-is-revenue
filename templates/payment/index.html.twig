{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Payments</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Client</th>
                            <th>CreatedAt</th>
                            <th>Amount</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for payment in payments %}
                        <tr>
                            <td>{{ payment.client.name }}</td>
                            <td>{{ payment.createdAt ? payment.createdAt|date('Y-m-d') : '' }}</td>
                            <td>{{ payment.amount }}</td>
                            <td>
                                <a href="{{ path('payment_show', {'id': payment.id}) }}">show</a>
                                <a href="{{ path('payment_edit', {'id': payment.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('payment_new') }}">Create new</a>
            </div>
        </div>
    </div>
{% endblock %}
